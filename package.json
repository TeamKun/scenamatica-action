{
  "name": "@scenamatica/action",
  "version": "1.0.0",
  "description": "Scenamatica is a scenario testing tool for PaperMC plugins.",
  "scripts": {
    "build": "tsc --build",
    "package": "esbuild --bundle lib/main.js --outfile=src/dist/index.js --platform=node",
    "prepublish": "npm run build && npm run package",
    "start": "node dist/index.js",
    "format:eslint": "eslint --fix --cache .",
    "format:prettier": "prettier --write .",
    "format": "npm run format:eslint && npm run format:prettier"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TeamKUN/scenamatica-action.git"
  },
  "author": "Peyang",
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "^3.2.1",
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^3.0.0",
    "@actions/io": "^1.1.0",
    "@actions/tool-cache": "^2.0.1",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@types/eslint": "^8.4.2",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.12.1",
    "eslint": "^8.39.0",
    "eslint-define-config": "^1.20.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-regexp": "^1.14.0",
    "eslint-plugin-sort-class-members": "^1.17.1",
    "eslint-plugin-unicorn": "^46.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "esbuild": "^0.17.18",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "packageManager": "pnpm@8.3.1",
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run build"
    }
  }
}
